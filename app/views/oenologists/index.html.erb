<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th>Magazine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td>
          <% MagazineOenologists.where(oenologist_id: oenologist.id).each do |magazine_oenologists| %>
            <li><%= magazine_oenologists.magazine.name %></li>
          <% end %>
        </td>
        <td><%= link_to 'Show', oenologist %></td>
        <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Magazine', new_magazine_path %>
<%= link_to 'New Oenologist', new_oenologist_path %>
